# Environment Configuration (Copy to .env and fill in)

# Application
APP_ENV=development
APP_DEBUG=false
APP_SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///./data.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/catholic_network

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# SMS Gateway (Africa's Talking)
SMS_API_KEY=your-africas-talking-api-key
SMS_USERNAME=your-africas-talking-username
SMS_SHORT_CODE=your-short-code

# Security
ENCRYPTION_KEY=your-aes-256-key-here
JWT_SECRET=your-jwt-secret-here

# Email (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Data Classification
DEMO_MODE=false  # Set true to use demo data only

# Offline Mode
OFFLINE_SYNC_INTERVAL=30  # seconds
OFFLINE_MAX_QUEUE=1000    # max queued events

